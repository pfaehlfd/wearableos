<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graphLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0d6e4"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" android:weightSum="1">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:layout_weight="1.00"
            android:weightSum="1">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_current_directory"
                android:layout_margin="10dp"
                android:layout_marginTop="0dp"/>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listViewFileChooser" android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="0dp"
        android:background="#606060"
        android:onClick="upload"
        android:padding="20dp"
        android:text="@string/btn_uploadDropbox"
        android:textColor="#FFFFFF"
        android:textSize="20sp" android:minHeight="35dp"/>

</LinearLayout>
